<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required to read calendar events and reminders -->
    <uses-permission android:name="android.permission.READ_CALENDAR" />

    <!-- Required for notifications on Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Required to schedule exact alarms for reminders -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <!-- Required to show full-screen alerts over other apps -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- Required to request battery optimization exemption -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <!-- Required to wake device from sleep for alarms -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Required for vibration -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Required for background service to auto-start on boot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".CalendarReminderApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FullScreenCalenderReminder">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FullScreenCalenderReminder">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Full-screen reminder activity -->
        <activity
            android:name=".ReminderActivity"
            android:exported="false"
            android:theme="@style/Theme.FullScreenCalenderReminder"
            android:launchMode="singleTop"
            android:excludeFromRecents="true"
            android:showOnLockScreen="true"
            android:turnScreenOn="true" />

        <!-- Settings activity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.FullScreenCalenderReminder"
            android:parentActivityName=".MainActivity" />

        <!-- Receiver for alarm broadcasts -->
        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="false" />

        <!-- Receiver for boot completed to start background service -->
        <receiver
            android:name=".BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- Receiver for syncing calendar to Wear OS devices -->
        <receiver
            android:name=".receiver.WearSyncReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="me.tewodros.vibecalendaralarm.SYNC_TO_WEAR" />
            </intent-filter>
        </receiver>

        <!-- Service to receive messages from Wear OS devices -->
        <service
            android:name=".wear.PhoneWearListenerService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <data
                    android:host="*"
                    android:scheme="wear" />
            </intent-filter>
        </service>

        <!-- Disable default WorkManager initialization since we use Configuration.Provider -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>

    </application>

</manifest>
