<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Left side: Event info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="16dp">

            <!-- Event Title -->
            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="4dp" />

            <!-- Event Time -->
            <TextView
                android:id="@+id/eventTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Time"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="2dp" />

            <!-- Calendar Name with emoji -->
            <TextView
                android:id="@+id/calendarName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“… Calendar Name"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

        <!-- Right side: Countdown and reminder info -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <!-- Countdown Text -->
            <TextView
                android:id="@+id/countdownText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starting in 5 min"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="8dp" />

            <!-- Reminder Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/reminderChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 min before"
                android:textSize="11sp"
                app:chipBackgroundColor="?attr/colorSecondaryContainer"
                app:chipStrokeWidth="0dp"
                app:chipMinHeight="24dp"
                style="@style/Widget.Material3.Chip.Assist" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
